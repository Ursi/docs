doctype html
html
	head
		meta(charset=`utf8`)
		link(rel=`stylesheet` href=`/docs/build/build.css`)
		title= title
	body
		for entity in docsData
			div
				-
					let head = entity.name;
					if (`parameters` in entity) {
						head += `(`;
						for (let [i, param] of entity.parameters.entries()) {
							let paramEntry = `${i ? `, ` : ``}${param.name}`;
							if (`default` in param) paramEntry = `[${paramEntry}]`;
							head += paramEntry;
						}
						
						head+= `)`;
					}
				h2(id=entity.name)
					code= head
					a.section-link(href=`#${entity.name}`) ยง
				if `parameters` in entity
					ol
						mixin nameAndType(param)
							code.param-name= param.name
							| : 
							code.js-value= param.type
							|  
							if `default` in param
								-
									let defaultValue = ``;
									if (param.default) defaultValue = `(default: <code class='js-value'>${param.default}</code>)`;
								span.default!= defaultValue
						for param in entity.parameters
							li
								+nameAndType(param)
								if `parameters` in param
									ol
										for subParam in param.parameters
											li
												+nameAndType(subParam)
											if `description` in subParam
												p!= subParam.description
							if `description` in param
								p!= param.description
				if `description` in entity
					p!= entity.description
				if `returns` in entity
					p
						span.returns Returns:
						|  
						!= entity.returns